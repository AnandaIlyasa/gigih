<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Spotify</title>
    <link rel="stylesheet" href="/style.css" />
    <script src="https://kit.fontawesome.com/b2cf010054.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="content">
        <section class="all-songs">
            <h1>All Songs</h1>
            <a href="/new" class="fa-solid fa-circle-plus icon-button"></a>
            <div class="songs-wrapper">
                <% songList.forEach((song)=> { %>
                    <div class="card">
                        <iframe style="border-radius:12px" src=<%=song.url %>
                            width="100%" height="100" frameBorder="0" allowfullscreen="" loading="lazy">
                        </iframe>
                        <div class="card-info">
                            <div class="song-info">
                                <p>
                                    <%= song.artists.join(", ") %>
                                </p>
                                <h3>
                                    <%= song.title %>
                                </h3>
                            </div>
                        </div>
                    </div>
                <% }) %>
        </section>

        <section class=" playlists">
                                        <h1>Playlists</h1>
                                        <div class="playlists-wrapper">
                                            <% playlists.forEach((playlist)=> { %>
                                                <a href="/playlist/<%= playlist %>" class="playlist">
                                                    <h3>
                                                        <%= playlist %>
                                                    </h3>
                                                </a>
                                                <% }) %>
                                        </div>
        </section>
    </div>
</body>

</html>